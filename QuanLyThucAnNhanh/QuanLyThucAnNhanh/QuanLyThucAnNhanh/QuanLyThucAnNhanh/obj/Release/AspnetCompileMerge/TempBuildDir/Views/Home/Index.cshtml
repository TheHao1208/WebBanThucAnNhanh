@{
    ViewBag.Title = "Home Page";
}


<div class="slider-area brown__nav slider--15 slide__activation slide__arrow01 owl-carousel owl-theme">
    @Html.Action("Banner", "Home")
</div>

<section class="wn__product__area brown--color pt--80  pb--30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section__title text-center">
                    <h2 class="title__be--2"style="color:#ca1133">Các Sản phẩm <span class="color--theme" style="color:#ca1133">mới</span></h2>
                    <p>Sản phẩm mới sẽ được cập nhập hàng ngày</p>
                </div>
            </div>
        </div>
        <!-- Start Single Tab Content -->
        @Html.Action("NewProduct", "Home")
    </div>
</section>
<section class="wn__newsletter__area bg-image--2" style="background-image:url(@ViewBag.Banner4);">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-5 col-md-12 col-12 ptb--150">
                <div class="section__title text-center">
                    <h2 style="color:#ca1133">Tham gia với chúng tôi</h2>
                </div>
                <div class="newsletter__block text-center">
                     <p style="color:#ca1133">Đăng ký nhận các bản thông tin về khuyến mãi về các món ăn và các thực đơn mới được cập nhật tại cửa hàng</p>
                    <form action="#">
                        <div class="newsletter__box">
                            <input type="email" placeholder="Enter your e-mail">
                            <button style="color:#ca1133">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="wn__bestseller__area bg--white pt--80  pb--30">
    @Html.Action("AllProduct", "Home")
</section>
<section class="wn__recent__post bg--gray ptb--80">
   @Html.Action("Blog","Home")
</section>

